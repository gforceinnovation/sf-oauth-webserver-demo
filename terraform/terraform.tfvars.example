# Example terraform.tfvars file
# Copy this to terraform.tfvars and fill in your values

aws_region    = "us-east-1"
project_name  = "sf-oauth-demo"
environment   = "dev"

# Salesforce Connected App Credentials
# You will get these from your Salesforce Connected App setup
sf_client_id     = "your_salesforce_consumer_key_here"
sf_client_secret = "your_salesforce_consumer_secret_here"
sf_callback_url  = "http://your-alb-dns-name/oauth/callback"  # Update after first deployment
sf_login_url     = "https://login.salesforce.com"

# Docker image - will be updated after pushing to ECR
container_image = "your-account-id.dkr.ecr.us-east-1.amazonaws.com/sf-oauth-demo:latest"

# Generate a random string for session secret
session_secret = "change-this-to-a-random-string-minimum-32-characters"
